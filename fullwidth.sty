\zref@addprop{\ZREF@mainlist}{fwd@pagevalue}

\newrobustcmd*\fwd@zref@label{%
   \stepcounter{fwd@zref@counter}
   \zref@label{fwd@pagelabel-\number\value{fwd@zref@counter}}%
